<div class="container">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

  <h1>Editing Book</h1>

  <%= form_with model: @book do |form| %>
     <div class="form-group">
        <label for="book_title">Title</label>
        <%= form.text_field :title, class:'form-control book_title' %>
     </div>

      <div class="form-group">
        <label for="book_body">Opinion</label>
        <%= form.text_area:body,class:"form-control book_body" %>
      </div>
  <% end %>

      <div class="form-group">
        <%= link_to "Update", books_path, class: "btn btn-sm btn-success" %>
      </div>
     <tr>
       <th><%= link_to "Show", book_path(@book.id) %></th>
        |
       <th><%= link_to "Back", books_path %></th>

     </tr>




</div>
</div>
