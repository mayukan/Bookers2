<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header>
        <!--Title bar-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class = "container">
          <a class = "navbar-brand" href ="https://f00bb862f1af4d9ba1713d59cf0d5071.vfs.cloud9.ap-northeast-1.amazonaws.com/">
          <span>Bookers</span>
          </a>
        </div>
        </div>
        </nav>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

    <main>
      <p id="notice"></p>
      <div class="container px-5 px-sm-0">
      <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>

      <table class="table">
        <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <!--UserNameが入る-->
        </tr>
        <tr>
          <th>introduction</th>
          <th></th>
        </tr>
        </tbody>
        </table>

      </div>
      </div>
      </div>

      <div class="row">
        <!--<a class="btn btn-outline-secondary btn-block edit_user_id" href="/users/;id"></a> -->

       <h2 class="mt-3">New book</h2>

       <form action="/books" accept-charset="UTF-8" method="post">
       <label for="book_title">Title</label>
       <input class="form-control book_title" type="text" name="book[title]" id="book_title">
      </div>

      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
      </div>

      <div class="form-group">
        <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        </div>
        </form>
        </div>



    <% if user_signed_in? %>
      <li>
    <%= link_to '投稿フォーム', new_book_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "新規登録", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_user_session_path %>
      </li>
    <% end %>
  </header>
    <%= yield %>

    </main>




    <footer>
    <div class="fixed-bottom">
      <div class = "container mt-5">
        <div class = "row">
          <div class = "mt-auto">
            <p>Copyright Infratop.inc</p>
          </div>
        </div>
      </div>
    </div>
    </footer>

  </body>
</html>
